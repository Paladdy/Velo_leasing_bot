# Bot Configuration
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/velo_bot

# Redis (for FSM states)
REDIS_URL=redis://localhost:6379/0

# Payment System (ЮKassa)
# Вариант 1: Basic Auth (shop_id + secret_key)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Вариант 2: OAuth токен (альтернатива Basic Auth)
YOOKASSA_OAUTH_TOKEN=your_oauth_jwt_token

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Logging
LOG_LEVEL=INFO

# Webhook сервер (для приёма уведомлений от ЮKassa)
ENABLE_WEBHOOK_SERVER=false  # Включить webhook сервер (true/false)
WEBHOOK_PORT=8080            # Порт для webhook сервера 